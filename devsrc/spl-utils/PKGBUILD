# Contributor: Kyle Fuller <inbox at kylefuller dot co dot uk>

pkgname=('spl-utils')
pkgver=0.6.0_rc14_3.8.3
pkgrel=2
pkgdesc='Solaris Porting Layer kernel module support files.'
depends=('linux=3.8.3')
makedepends=('linux-headers=3.8.3')
arch=('i686' 'x86_64')
url='http://zfsonlinux.org/'
source=(http://archive.zfsonlinux.org/downloads/zfsonlinux/spl/spl-0.6.0-rc14.tar.gz
        spl-utils.hostid)
groups=('archzfs')
md5sums=('07b6cf56659a95bc22ac45dbdd8344a0'
         'a54f0041a9e15b050f25c463f1db7449')
license=('GPL')

build() {
  cd ${srcdir}/spl-0.6.0-rc14
  ./autogen.sh
  ./configure --prefix=/usr --libdir=/usr/lib --sbindir=/usr/sbin \
              --with-config=user
  make
}

package() {
  cd ${srcdir}/spl-0.6.0-rc14
  make DESTDIR=${pkgdir} install

  install -D -m644 ${srcdir}/spl-utils.hostid ${pkgdir}/etc/hostid
}

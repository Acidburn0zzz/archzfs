# Contributor: Kyle Fuller <inbox at kylefuller dot co dot uk>

pkgname=("spl")
pkgver=_
pkgrel=1
pkgdesc="Solaris Porting Layer kernel modules."
depends=("spl-utils=_-1" "linux=-1")
makedepends=("linux-headers=-1")
arch=("i686" "x86_64")
url="http://zfsonlinux.org/"
source=(http://archive.zfsonlinux.org/downloads/zfsonlinux/spl/spl-.tar.gz)
groups=("archzfs")
md5sums=("0f58806d9fd9cab900181b59b21bae50")
license=("GPL")
install=spl.install

build() {
  cd "$srcdir/spl-"
  ./autogen.sh
  if [[ $CARCH == "i686" ]]; then
    ./configure --prefix=/usr --libdir=/usr/lib --sbindir=/usr/sbin \
                --with-config=kernel --enable-atomic-spinlocks
  else
    ./configure --prefix=/usr --libdir=/usr/lib --sbindir=/usr/sbin \
                --with-config=kernel
  fi
  make
}

package() {
  cd "$srcdir/spl-"
  make DESTDIR=$pkgdir install

  # move module tree /lib -> /usr/lib
  cp -r $pkgdir/{lib,usr}
  rm -r $pkgdir/lib
}
